
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


enum Status {
  Active
  Inactive
}



model Verification {
  id               Int      @id @default(autoincrement())
  userId           Int
  user             User     @relation("verificationc1",fields: [userId], references: [id], onDelete: Cascade) 
  verificationType String   // 'email' or 'phone'
  verificationCode String   @db.VarChar(6)   // OTP code
  expiresAt        DateTime // OTP expiration timestamp
  createdAt        DateTime @default(now()) @db.Timestamp(0)

  @@index([userId])
}

model RoleModules {
  roleId      Int
  moduleId    Int
  view        Boolean   @default(false)
  add         Boolean   @default(false)
  edit        Boolean   @default(false)
  delete      Boolean   @default(false)

  module      Module    @relation(fields: [moduleId], references: [id])
  userRoles        UserRole  @relation(fields: [roleId], references: [id], name:"UserRoleRelation", map: "UserRole_role_fkey")
  
  @@id([roleId, moduleId]) // Composite primary key
}

model UserRole {
  id          Int       @id @default(autoincrement())
  roleName    String    @unique @db.VarChar(255)
  description String?   @db.Text
  modules     RoleModules[]   @relation("UserRoleRelation", map: "UserRole_role_fkey")
  createdAt   DateTime  @default(now()) @db.Timestamp(0)
  updatedAt   DateTime  @default(now()) @updatedAt @db.Timestamp(0)

  user_roles     User[]     @relation("user_roles")
}

model Module {
  id          Int        @id @default(autoincrement())
  moduleName  String     @unique @db.VarChar(255)
  status      Status     @default(Active)
  allPerimission  Boolean   @default(false)
  roles       RoleModules[]
  createdAt   DateTime   @default(now()) @db.Timestamp(0)
  updatedAt   DateTime   @default(now()) @updatedAt @db.Timestamp(0)
}

model User {
  id                 Int                  @id @default(autoincrement())
  firstName          String               @db.VarChar(225)
  lastName           String               @db.VarChar(225)
  email                 String?         @unique
  mobile                 String?       
  isSelfLogin        Boolean?
  tempPassword        Boolean?      @default(true)
   mfaEnabled   Boolean @default(true)
   qrCodeShow   Boolean @default(true)
  mfaSecret    String? // base32 (encrypted)
  password                    String       @db.VarChar(255)
  emailVerified               Boolean?      @default(false)
  phoneVerified               Boolean?      @default(false)
  createdAt                   DateTime     @default(now()) @db.Timestamp(0)
  updatedAt                   DateTime     @default(now()) @updatedAt @db.Timestamp(0)
  status                      Status       @default(Active)
  profileImage String  @default("uploads/default.jpg")
   
roleId Int?
roles  UserRole? @relation("user_roles", fields: [roleId], references: [id])

   resetOTPExpiresAt  DateTime?   
   resetOTP   String?

      verificationc1     Verification[]     @relation("verificationc1")
}


model Partner {
  id           Int      @id @default(autoincrement())
  tenantId     String
  tenantName   String?
  requestId    String?
  responseId   String?
  contactName   String?
  contactEmail   String?
  PreferredSlot   String?
  TimeZone   String?
  enabledAt     DateTime?   // ‚Üê FIRST enable timestamp
  emailSent     Boolean     @default(false)
  preferredDate  DateTime?
  currentState String   @default("DISABLE") 
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  parnter_kitoff ParnterKickoff[] @relation("parnter_kitoff")
}

model Customer {
  id                       Int      @id @default(autoincrement())
  partnerTenantId           String
  partnerTenantName         String?
  acronisCustomerTenantId   String   @unique
  acronisCustomerTenantName String?
  status                    String
  settings                  Json?
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
  customer_contact  CustomerContact[]  @relation("customer_contact")
  emergency_escalation EmergencyEscalation[] @relation("emergency_escalation")
  customer_contract CustomerContract[]  @relation("customer_contract")
  customer_invoice  Invoice[]  @relation("customer_invoice")
  customer_automailinvoice AutoInvoice[]  @relation("customer_automailinvoice")
  customer_report  Report[]  @relation("customer_report")
  customer_kitoff CustomerKickoff[]  @relation("customer_kitoff")
}

model Credential {
  id               Int      @id @default(autoincrement())
  partnerTenantId   String   
  customerTenantId  String?
  clientId          String
  clientSecret      String
  datacenterUrl     String
  active        Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model ParnterCredential {
  id               Int      @id @default(autoincrement())
  partnerTenantId   String   
  clientId          String
  clientSecret      String
  datacenterUrl     String
  active        Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Settings {
  id                     Int     @id @default(autoincrement())
  customerLogInterval    Int     @default(5)
  customerDeviceInterval Int     @default(12)
  customerPolicyInterval Int     @default(2)
  extraIdGenerate       Int  @default(1)
  mailcc               Json?
  createdAt         DateTime @default(now())
  updatedAt              DateTime @updatedAt
}

model Device {
  id               Int      @id @default(autoincrement())
  partnerTenantId  String?
  customerTenantId String?
  agentId          String?
  hostname         String?
  hostId           String?
  online           Boolean?
  enabled          Boolean?
  osFamily         String?
  registrationDate DateTime?
  units            Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([customerTenantId, agentId])
}



model AlertLog {
  id               Int      @id @default(autoincrement())
  alertId          String   // Acronis alert ID
  extraId          String?
  partnerTenantId  String
  customerName  String
  customerTenantId String
  rawJson          Json
  receivedAt     DateTime?
  loggedAt         DateTime @default(now())
    createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Policy {
  id               Int      @id @default(autoincrement())

  policyId         String   // original policy.id from Acronis
  planType         String?
  planName         String?
  agentId          String?
  enabled          Boolean?

  customerTenantId String

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([customerTenantId, policyId, agentId])
}



model ParnterContact {
  id         Int      @id @default(autoincrement())  // Auto-increment primary key
  apiId             String   @unique
  apiCreatedAt         DateTime? 
  apiUpdatedAt         DateTime?
  email             String?  
  address1          String?
  address2          String?
  country           String?
  state             String?
  city              String?
  zipcode           String?
  phone             String?
  firstname         String?
  lastname          String?
  title             String?
  website           String?
  industry          String?
  organizationSize  String?
  emailConfirmed    Boolean?
  aan               String?
  fax               String?
  language          String?
  types             String?
  deletedAt         DateTime? 
  tenantId          String?
  userId            String?
   createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}


model CustomerContact {
  id         Int      @id @default(autoincrement())  // Auto-increment primary key
  contactMode  String?  
  name        String?
  email        String?
  mobile     String?
 customerId Int?
 customers  Customer?  @relation("customer_contact", fields: [customerId], references: [id])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model EmergencyEscalation {
  id         Int      @id @default(autoincrement())  // Auto-increment primary key
emergencyMode  String?  
  whatsapp        String?
  teams        String?
 customerId Int? @unique
 customers  Customer?  @relation("emergency_escalation", fields: [customerId], references: [id])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model CustomerContract {
  id         Int      @id @default(autoincrement())  // Auto-increment primary key
  startDate  DateTime?  
  endDate        DateTime?
  installationId     String?
  name     String?
  serialNumber     String?
  customerId Int? @unique
  seats      Int?
  customers  Customer?  @relation("customer_contract", fields: [customerId], references: [id])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Plan {
  id               Int      @id @default(autoincrement())
  customerTenantId String
  policyId         String
  planName         String?
  planType         String
  enabled          Boolean  @default(true)
  agentId          String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

@@unique([customerTenantId, policyId, agentId])

}


model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  alias     String?
  disabled  Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Resource {
  id                 Int      @id @default(autoincrement())

  customerTenantId   String
  acronisTenantId    String
  acronisResourceId  String
  agentId            String   @unique

  name               String?
  userDefinedName    String?
  type               String

  attributes         Json?

  createdAt          DateTime
  updatedAt          DateTime
  lastSyncedAt       DateTime @default(now())

  @@index([customerTenantId])
}


model Invoice {
  id                 Int      @id @default(autoincrement())

  startDate   DateTime
  endDate    DateTime
  generated  Boolean  @default(false)

  category               String?
  type               String?
mailto     String?
  mailcc         Json?
 customerId Int? 
 terms      Int?
 paymentStatus  String @default("pending")
  customers  Customer?  @relation("customer_invoice", fields: [customerId], references: [id])
  invoicePath  Json?
  createdAt          DateTime  @default(now())
deletedAt     DateTime?
  updatedAt          DateTime @updatedAt

}

model AutoInvoice {
  id          Int       @id @default(autoincrement())
  automail    Boolean?
  type        String?
  customerId  Int?
  customer    Customer? @relation("customer_automailinvoice", fields: [customerId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Report {
  id                 Int      @id @default(autoincrement())

  startDate   DateTime
  endDate    DateTime
  generated  Boolean  @default(false)

  category               String?
  type               String?
mailto     String?
  mailcc         Json?
 customerId Int? 
 terms      Int?
 paymentStatus  String @default("pending")
  customers  Customer?  @relation("customer_report", fields: [customerId], references: [id])
  invoicePath  Json?
  createdAt          DateTime  @default(now())
deletedAt     DateTime?
  updatedAt          DateTime @updatedAt

}


model CustomerKickoff {
  id        Int      @id @default(autoincrement())
  customerId Int?
   customers  Customer?  @relation("customer_kitoff", fields: [customerId], references: [id])
  status    KickoffStatus @default(NEW)
  docxPath  String?
  pptPath  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum KickoffStatus {
  NEW
  PENDING
  COMPLETED
}

model ParnterKickoff {
  id        Int      @id @default(autoincrement())
  parnterId Int?
   parnters  Partner?  @relation("parnter_kitoff", fields: [parnterId], references: [id])
  status    KickoffStatus @default(NEW)
  docxPath  String?
  pptPath  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


